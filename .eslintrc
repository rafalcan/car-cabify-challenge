{
  "extends":                        ["eslint:recommended"],
  "env":                            {
      "node":                       true,
      "es6":                        true,
      "jest":                       true
  },
  "parserOptions":                  {
     "ecmaVersion":                 8,
     "ecmaFeatures":                {
         "jsx":                     true,
         "modules":                 true
     },
     "sourceType":                  "module",
     "allowImportExportEverywhere": false,
     "codeFrame":                   false
  },
  "rules":                          {
    "no-console":                   "off",
    "strict":                       0,
    "no-const-assign":              "warn",
    "linebreak-style":              0,
    "indent":                       ["error", 2],
    "semi":                         ["error", "always"],
    "no-useless-escape":            0,
    "quotes":                       ["error", "single", { "allowTemplateLiterals": true }]
  }
}
